{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dotEnv": [".env.production", ".env"],
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_GA_ID",
        "$EMAIL_SERVER",
        "$EMAIL_FROM"
      ],
      "outputs": [
        "dist/**", 
        "build/**", 
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dotEnv": [".env.local", ".env.development", ".env"]
    }
  }
}

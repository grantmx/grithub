{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env", ".env.local"],
  "pipeline": {
    "build": {
      "dotEnv": [".env.production", ".env"],
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_GA_ID",
        "$EMAIL_SERVER",
        "$EMAIL_FROM",
        "$NEXT_PUBLIC_url",
        "$merchant_id",
        "$merchant_key",
        "$sandbox_merchant_id",
        "$sandbox_merchant_key",
        "$merchant_passphrase",
        "$eskomSePush_key",
        "$server_email",
        "$server_email_password",
        "$twilio_sid",
        "$twilio_token",
        "$sendgrid_api_key_id",
        "$sendgrid_api_key"
      ],
      "outputs": [
        "dist/**", 
        "build/**", 
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dotEnv": [".env.local", ".env.development", ".env"]
    }
  }
}
